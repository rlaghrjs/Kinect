<Window x:Class="SW_proj_gpt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Word Catcher" Height="600" Width="800">
    <Grid>
        <!-- Kinect 영상 출력 -->
        <Image Name="KinectVideo" Stretch="Fill" />

        <!-- 게임 요소 -->
        <Canvas Name="GameCanvas" Background="Transparent" />

        <!-- 정답 선택 패널 -->
        <StackPanel Name="AnswerPanel" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="QuestionText" FontSize="24" Foreground="White" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button Name="Option1" Click="OptionButton_Click" FontSize="20" Width="200" Margin="10"/>
            <Button Name="Option2" Click="OptionButton_Click" FontSize="20" Width="200" Margin="10"/>
            <Button Name="Option3" Click="OptionButton_Click" FontSize="20" Width="200" Margin="10"/>
        </StackPanel>

        <!-- 점수 표시 -->
        <TextBlock Name="ScoreText" FontSize="20" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Text="Score: 0" />
    </Grid>
</Window>
